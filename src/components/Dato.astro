<div class="dayContainer">
  <div class="dayContent">
    <h1>Motivation for the day</h1>
    <p>do better than yesterday</p>
  </div>
</div>

<style>
  @media screen and (width > 750px) {
    .dayContainer {
      grid-column: 2;
      margin-bottom: 0.5rem;
    }
    .dayContent {
      width: 25rem;
      height: 7rem;
      background-color: var(--dm_accent_color);
      color: var(--dm_text_color);
      border-radius: 6px;
      padding: 1rem 2rem;
      display: flex;

      flex-direction: column;

      p,
      h1 {
        color: var(--dm_text_knap_color);
      }
    }
  }
  @media screen and (width < 750px) {
    .dayContainer {
      grid-column: content;
      margin-bottom: 0.5rem;
    }
    .dayContent {
      width: 100%;
      height: 7rem;
      background-color: var(--dm_accent_color);
      color: var(--dm_text_color);
      border-radius: 6px;
      padding: 1rem 2rem;
      display: flex;

      flex-direction: column;

      p,
      h1 {
        color: var(--dm_text_knap_color);
      }
      h1 {
        font-size: 1.5rem;
      }
      p {
        font-size: 1rem;
      }
    }
  }
</style>

<script>
  const now = new Date();
  const day = now.getDay(); // returns a number representing the day of the week, starting with 0 for Sunday
  const hours = now.getHours();
  const minutes = now.getMinutes();
  const dayCount = document.querySelector("h1");
  const hourConut = document.querySelector("p");
  const dayName = ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"];

  function timerCheck() {
    let dayNow = dayName[day];
    dayCount.innerHTML = `Day: ${dayNow}`;
    hourConut.innerHTML = `Time: ${hours}:${minutes}`;
    console.log("day", dayNow);

    console.log(`Today is day ${day} and the time is ${hours}:${minutes}.`);
    timerCounter();
  }
  timerCheck();
  function timerCounter() {
    setTimeout(timerCheck, 60000);
  }
</script>
